                        <ImageView fitHeight="39.0" fitWidth="228.0" pickOnBounds="true" preserveRatio="true" translateX="3.0">
                            <image>
                                <Image url="@../../images/profile_4372360.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <styleClass>
                  <String fx:value="sbutton" />
                  <String fx:value="dashboard-text" />
               </styleClass>
                </Button>
            <Button fx:id="LogoutButton" alignment="CENTER" layoutX="10.0" layoutY="446.0" mnemonicParsing="false" onAction="#handleLogoutClick" prefHeight="56.0" prefWidth="242.0" text="Log Out">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <styleClass>
                  <String fx:value="sbutton" />
                  <String fx:value="dashboard-text" />
               </styleClass>
            </Button>
            </children>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="mainContentArea" prefWidth="990.0" styleClass="main-content" />
    </center>
</BorderPane>
