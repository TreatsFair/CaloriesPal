                    </VBox.margin>
                    <graphic>
                        <ImageView fitHeight="39.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true" translateX="4.0">
                            <image>
                                <Image url="@../../images/exercise-routine_12646159.png" />
                            </image>
                        </ImageView>
                    </graphic>
               <styleClass>
                  <String fx:value="sbutton" />
                  <String fx:value="dashboard-text" />
               </styleClass>
                </Button>
                <Button fx:id="profileButton" mnemonicParsing="false" onAction="#handleProfileClick" prefHeight="56.0" prefWidth="242.0" text="Profile">
