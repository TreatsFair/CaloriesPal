<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="caloriespal.view.ProfileController"
      spacing="20" alignment="TOP_LEFT"
      styleClass="main-content" prefWidth="990.0" prefHeight="650.0">

    <padding>
        <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
    </padding>

    <Label text="Update Profile" styleClass="title"/>

    <Label text="Weight (kg):"/>
    <TextField fx:id="weightField" promptText="e.g. 48"/>

    <Label text="Calorie Goal:"/>
    <TextField fx:id="goalField" promptText="e.g. 1800"/>

    <Button fx:id="saveButton" text="Save Changes"/>

</VBox>