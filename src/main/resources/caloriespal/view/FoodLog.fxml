<AnchorPane prefHeight="650.0" prefWidth="990.0" styleClass="main-content" stylesheets="@../../styles/foodlog.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="caloriespal.view.FoodLogController">
    <children>
        <Separator layoutY="81.0" prefHeight="3.0" prefWidth="990.0" />
        <Text layoutX="56.0" layoutY="63.0" styleClass="foodlog-title" text="Food Log" />
      <Group layoutX="56.0" layoutY="120.0">
         <children>
              <VBox prefHeight="382.0" prefWidth="400.0" spacing="8.0">
                  <children>
                      <TitledPane animated="false" collapsible="false" prefHeight="100.0" prefWidth="337.0" styleClass="foodlog-cards" text="Breakfast">
                          <content>
                              <ListView fx:id="breakfastList" maxHeight="120.0" minHeight="19.0" prefHeight="60.0" prefWidth="335.0" />
                          </content>
                      </TitledPane>
                      <Button fx:id="addBreakfastBtn" mnemonicParsing="false" styleClass="food-submit-button" text="Add to Breakfast" />
                  <TitledPane animated="false" collapsible="false" prefHeight="100.0" prefWidth="926.0" styleClass="foodlog-cards" text="Dinner">
                     <VBox.margin>
                        <Insets top="60.0" />
                     </VBox.margin>
                     <content>
                        <ListView fx:id="dinnerList" maxHeight="120.0" minHeight="24.0" prefHeight="60.0" prefWidth="924.0" />
                     </content>
                  </TitledPane>
                  <Button fx:id="addDinnerBtn" styleClass="food-submit-button" text="Add to Dinner" />
                  </children>
              </VBox>
            <VBox layoutX="471.0" prefHeight="382.0" prefWidth="400.0" spacing="8.0">
               <children>
                      <TitledPane animated="false" collapsible="false" prefHeight="100.0" prefWidth="926.0" styleClass="foodlog-cards" text="Lunch">
                          <content>
                              <ListView fx:id="lunchList" maxHeight="120.0" minHeight="24.0" prefHeight="60.0" prefWidth="924.0" />
                          </content>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                      </TitledPane>
                      <Button fx:id="addLunchBtn" styleClass="food-submit-button" text="Add to Lunch" />
                  <TitledPane animated="false" collapsible="false" prefWidth="926.0" styleClass="foodlog-cards" text="Snacks">
                     <content>
                        <ListView fx:id="snacksList" maxHeight="120.0" minHeight="24.0" prefHeight="60.0" prefWidth="924.0" />
                     </content>
                     <VBox.margin>
                        <Insets top="60.0" />
                     </VBox.margin>
                  </TitledPane>
                  <Button fx:id="addSnacksBtn" styleClass="food-submit-button" text="Add to Snacks" />
               </children>
            </VBox>
         </children>
      </Group>
      <VBox alignment="TOP_RIGHT" layoutX="683.0" layoutY="29.0" prefHeight="105.0" prefWidth="243.0" spacing="5.0">
         <children>
            <TextField fx:id="searchField" prefHeight="32.0" prefWidth="174.0" promptText="🔍 Search for food..." styleClass="search-field" />
            <ListView fx:id="foodSearchList" prefHeight="66.0" prefWidth="420.0" styleClass="search-results" visible="false" />
         </children>
      </VBox>
      <ButtonBar layoutX="727.0" layoutY="568.0" prefHeight="40.0" prefWidth="200.0">
         <buttons>
            <Button mnemonicParsing="false" text="Save" />
         </buttons>
      </ButtonBar>
    </children>
</AnchorPane>
