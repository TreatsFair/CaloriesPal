<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1200.0" styleClass="background" stylesheets="@../../styles/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="caloriespal.view.RegisterController">
    <children>

        <Pane layoutX="697.0" layoutY="70.0" prefHeight="470.0" prefWidth="407.0" styleClass="login-pane" stylesheets="@../../styles/login.css">
            <children>
                <Label layoutX="132.0" layoutY="34.0" styleClass="form-title" text="Register" textAlignment="CENTER">
                    <font>
                        <Font name="STCaiyun" size="42.0" />
                    </font>
                </Label>

                <!-- Username -->
                <Label layoutX="74.0" layoutY="110.0" styleClass="form-label" text="Username">
                    <font>
                        <Font name="OCR A Extended" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="userNameField" layoutX="74.0" layoutY="133.0" prefHeight="34.0" prefWidth="259.0" styleClass="input-field" />

                <!-- Email -->
                <Label layoutX="74.0" layoutY="177.0" styleClass="form-label" text="Email">
                    <font>
                        <Font name="OCR A Extended" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="emailField" layoutX="74.0" layoutY="199.0" prefHeight="34.0" prefWidth="259.0" promptText="sample@gmail.com" styleClass="input-field" />

                <!-- Password -->
                <Label layoutX="74.0" layoutY="243.0" styleClass="form-label" text="Password">
                    <font>
                        <Font name="OCR A Extended" size="13.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" layoutX="74.0" layoutY="265.0" prefHeight="34.0" prefWidth="259.0" styleClass="input-field" />

                <!-- Register Button -->
                <Button fx:id="registerButton" defaultButton="true" layoutX="74.0" layoutY="340.0" onAction="#handleRegister" prefHeight="40.0" prefWidth="259.0" styleClass="form-button-secondary" text="Register" />

                <!-- Optional login redirect label -->
                <Label fx:id="registerMessageLabel" layoutX="22.0" layoutY="14.0" prefHeight="17.0" prefWidth="333.0" styleClass="logoutMsg" stylesheets="@../../styles/login.css" />
            <Button fx:id="returnLoginPage" layoutX="74.0" layoutY="390.0" onAction="#handleReturnToLogin" prefHeight="40.0" prefWidth="259.0" styleClass="form-button-return" text="Return to Login Page" />
            </children>
        </Pane>
    </children>
</AnchorPane>
